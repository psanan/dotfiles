source $HOME/util/dotfiles/bashrc

alias cds="cd $SCRATCH"
alias q="squeue -u `whoami`"

# https://user.cscs.ch/access/accounting/
alias quota="accounting"

# shortcut for a typical interactive session
alias interactive="module load daint-gpu JuliaExtensions && srun -C gpu -n 1 -A c23 --time=02:00:00 --pty bash"
