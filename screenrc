# Escape: Use control-^ (control-shift-6) instead of control-a
escape ^^^

# vertically split, change focus, and start a new session with escape-s
bind s eval "split -v" "focus" "screen"

# use 'x' to kill the current region instead of locking the screen
bind x remove

mousetrack on
defmousetrack on

startup_message off
altscreen on

hardstatus alwayslastline
hardstatus string 'GNU screen: %{cd}%S%{dd}  %-Lw%{= BW}%50>%n%f* %t%{-}%+Lw%<'

defshell -bash
