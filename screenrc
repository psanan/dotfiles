# Escape: Use control-^ (control-shift-6) instead of control-a
escape ^^^

# vertically split, change focus, and start a new session with escape-s
bind s eval "split -v" "focus" "screen"

# deactivate screen locking
bind x

mousetrack on
startup_message off
altscreen on

hardstatus alwaysfirstline
hardstatus string '%{bk} %S (GNU screen) %{w}%?%-Lw%?%{=b kR}(%{W}%n*%f %t%?(%u)%?%{=b kR})%{= w}%?%+Lw%?%? %{g}]'
